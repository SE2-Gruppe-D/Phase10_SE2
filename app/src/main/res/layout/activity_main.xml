<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_margin="10dp">
    <TextView
        android:id="@+id/textView"
        android:layout_width="198dp"
        android:layout_height="66dp"
        android:text="Phase"
        android:textColor="@color/black"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.453"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.058" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintBottom_toBottomOf="@id/musicCredit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="114dp">
           <Button
            android:id="@+id/button4"
               android:layout_width="180dp"
               android:layout_height="160dp"
            android:layout_marginBottom="180dp"
            android:background="#159E1B"
            android:text="HINT"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/joinGameBtn"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/createGameBtn"
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:layout_marginStart="16dp"
            android:background="#2CC9F1"
            android:text="Spiel erstellen"

            app:layout_constraintEnd_toStartOf="@+id/joinGameBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/joinGameBtn"
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:layout_marginEnd="16dp"
            android:background="#EC4444"
            android:text="Spiel beitreten"
            app:layout_constraintBottom_toTopOf="@id/button4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/createGameBtn"
            app:layout_constraintTop_toTopOf="parent"
             />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:layout_marginStart="16dp"
        android:background="#F8E118"
        android:gravity="fill_vertical"
        android:text="@string/ncredits_nbaisan_andreas_nhasler_melanie_nlikar_laura_nmarchetti_theresa_nplie_nig_leon"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createGameBtn"
        app:layout_constraintVertical_bias="0.0" />

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="134dp"
            android:layout_height="139dp"
            android:src="@drawable/phase10"
            android:translationZ="90dp"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
        android:layout_marginTop="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.447" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/musicCredit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/music_by_bensound_com"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>